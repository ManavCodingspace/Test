#include <iostream>
using namespace std;

int main(){
    int n;
    double sum = 0.0;
    
    cout <<"Enter the number of terms: "<< endl;
    cin>>n;

    for (int i = 1; i <=n; i++)
    {
        if (i % 2 == 0)
        {
            sum -= 1 /(i * 1)^i;
        } else {
            sum += 1 /(i * 1)^i;
        }
        
    }
    
    cout<<"Sum of the first " << n<< "terms: " << sum << endl;

    return 0;
    
}
