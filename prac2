#  Write a program to remove the duplicates from an array?

#include <iostream>
using namespace std;

// Function to remove duplicates
int removeDuplicates(int arr[], int n) {
    // Check if the array is empty or contains only one element
    if (n == 0 || n == 1)
        return n;

    // Initialize variables
    int j = 0;

    // Traverse the array and update it with unique elements
    for (int i = 0; i < n - 1; i++) {
        if (arr[i] != arr[i + 1])
            arr[j++] = arr[i];
    }
    arr[j++] = arr[n - 1];

    // Resize the array to remove duplicates
    n = j;

    return n;
}

// Function to display the array
void displayArray(int arr[], int n) {
    for (int i = 0; i < n; i++)
        cout << arr[i] << endl;
}

int main() {
    int arr[] = {1, 2, 2, 3, 4, 4, 5, 6, 6, 7};
    int n = sizeof(arr) / sizeof(arr[0]);

    cout << "Original array: " << endl;
    displayArray(arr, n);

    // Remove duplicates
    n = removeDuplicates(arr, n);

    cout << "Array after removing duplicates: " << endl;
    displayArray(arr, n);

    return 0;
}
